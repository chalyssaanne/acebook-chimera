<h1>Timeline</h1>
<ul reversed class="posts">
  {{#each posts}}
  <li>{{this.message}} {{dateFormat this.created_at}} Likes {{this.likes}}
    {{#if this.img.data}}
    <div class="imageClass">
      <img src="{{dataImage this.img}}" height="200"/>
    </div>
    {{/if}}
    
    <form id="like-button" action="/posts/like" method="post">
      <input type="hidden" id="message" name="message" value="{{this.message}}">
      <input type="hidden" id="likes" name="likes" value="{{this.likes}}">
      <input type="submit" value="Like">
    </form>
    <form id="unlike-button" action="/posts/unlike" method="post">
      <input type="hidden" id="message" name="message" value="{{this.message}}">
      <input type="hidden" id="likes" name="likes" value="{{this.likes}}">
      <input type="submit" value="Unlike">
    </form>
  </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>



